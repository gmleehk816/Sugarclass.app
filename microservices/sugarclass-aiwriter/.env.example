# =============================================================================
# AI Writer Service Environment Configuration
# =============================================================================

# Database (PostgreSQL)
POSTGRES_DB=newscollect
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-db-password-here

# Backend API Settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
SUGARCLASS_API_URL=http://backend:8000/api/v1

# LLM Configuration (Standardized)
LLM_BASE_URL=https://hb.dockerspeeds.asia/
LLM_API_KEY=your-llm-api-key-here
LLM_MODEL=gemini-1.5-flash
LLM_MODEL_SUMMARY=gemini-1.5-flash
LLM_MODEL_DRAFT=gemini-1.5-flash

# News API Keys (Optional)
NEWSAPI_KEY=
GNEWS_API_KEY=
NEWSCATCHER_API_KEY=

# Collection Scheduler
ENABLE_SCHEDULER=true
SCHEDULER_TIMEZONE=UTC

# Security & CORS
SECRET_KEY=your-secure-secret-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:3400,http://localhost:3401,https://sugarclass.app

# Logging
LOG_LEVEL=INFO
