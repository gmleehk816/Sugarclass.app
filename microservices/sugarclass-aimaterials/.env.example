# =============================================================================
# AI Materials Service Environment Configuration
# =============================================================================

# Application Settings
DEBUG=False
PORT=8004

# Database (SQLite - will be mounted as volume)
DB_NAME=rag_content.db
DB_PATH=/app/database/rag_content.db

# LLM API Configuration (for content processing)
LLM_API_URL=https://api.dockerspeeds.com/v1
LLM_API_KEY=your-llm-api-key-here
LLM_MODEL=gemini-3-pro-preview

# OpenAI API (for creative rewriting)
OPENAI_API_KEY=sk-your-openai-key-here

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:3400","http://localhost:3404","https://sugarclass.app"]

# Materials Directory (optional - for content ingestion)
MATERIALS_DIR=/app/materials
MATERIALS_OUTPUT_DIR=/app/output/materials_output

# Service Integration
SUGARCLASS_API_URL=http://backend:8000/api/v1
