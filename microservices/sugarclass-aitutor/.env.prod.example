# Production Environment Variables
# Copy this file to .env.prod and fill in your actual values

# Database URLs
CONTENT_DB_URL=postgresql://tutor:CHANGE_THIS_PASSWORD@tutor-content-db:5432/tutor_content
AGENT_DB_URL=postgresql://tutor:CHANGE_THIS_PASSWORD@tutor-agent-db:5432/tutor_agent

# Qdrant Configuration
QDRANT_URL=http://tutor-qdrant:6333
QDRANT_API_KEY=

# Redis Configuration
REDIS_URL=redis://tutor-redis:6379

# LLM Configuration (REQUIRED)
OPENAI_API_KEY=sk-your-openai-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# External Services
NGROK_AUTH_TOKEN=  # Not needed for production

# Backend Configuration
RAG_SERVICE_URL=http://tutor-service:8000
WEB_PORT=5000

# CORS Settings
CORS_ORIGINS=https://sugarclass.app,https://www.sugarclass.app

# Production Mode
ENVIRONMENT=production
DEBUG=false

# PostgreSQL Passwords (for Docker containers)
POSTGRES_CONTENT_PASSWORD=tutor_content_pass
POSTGRES_AGENT_PASSWORD=tutor_agent_pass
